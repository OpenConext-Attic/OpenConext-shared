<configuration debug="true">

  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="externalFile" class="ch.qos.logback.core.FileAppender">
    <!-- truncate the file for every test -->
    <append>false</append>

    <file>target/dump.log</file>
    <encoder>
      <pattern>%-5level - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="dump">
    <appender-ref ref="externalFile" />
  </logger>

  <appender name="MEMORY" class="nl.surfnet.coin.shared.log.diagnostics.MemoryAppender">
    <dumpAppender>externalFile</dumpAppender>
  </appender>

  <logger name="org.eclipse.jetty" level="warn">
    <appender-ref ref="console" />
  </logger>
  <logger name="nl.surfnet.coin" level="debug">
    <appender-ref ref="console" />
  </logger>
  <root level="info">
    <appender-ref ref="console"/>
    <appender-ref ref="MEMORY" />
  </root>


</configuration>
